#include <stdio.h>

int main(void) {
  int x;
  int *px;
  px=&x;//px recoge la direccion de x
  x=2;
  printf("\ndireccion de x: %x",&x);
  printf("\nEl valor de x es : %d",x);
  printf("\n puntero a x, px: %x",px);
  printf("\ndireccion de px: %x",&px);
  printf("\n El valor de x a trav√©s de su puntero: %d",*px);
}
